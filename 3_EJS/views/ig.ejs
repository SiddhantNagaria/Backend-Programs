<%- include("includes/head.ejs") %>

    <body>
        <h2>This page belongs to <%= data.name %>
        </h2>
        <button>Follow</button>
        <button>Message</button>
        <br>
        <h3>Followers : <%= data.followers %>
        </h3>
        <h3>Following : <%= data.following %>
        </h3>
        <ul>
            <% for(user of followers){ %>
                <li>
                    <%= user %>
                </li>
                <% } %>
        </ul>
        <hr>
        <% for(let post of data.posts){ %>
            <img src="<%= post.image %>" alt="some image">
            <h3>likes : <%= post.like %>
            </h3>
            <h3>comments : <%= post.comments %>
            </h3>
            <% } %>

                <%- include("includes/footer.ejs") %>
    </body>
    <script src="/app.js"></script>

    </html>